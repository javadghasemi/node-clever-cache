{
  "private": true,
  "main": "dist/index.js",
  "type": "commonjs",
  "workspaces": [
    "packages/*"
  ],
  "files": [
    "./lib"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "publish": "npm run build && lerna publish",
    "publish:beta": "npm run build && lerna publish --npm-tag=beta --access public",
    "pretest": "npm run clean && lerna run tsc && eslint . --ext .js --ext .ts",
    "jest": "jest",
    "test": "npm run jest",
    "prebuild": "npm run clean",
    "build": "lerna run tsc",
    "ts-node": "lerna run tsc && ts-node",
    "clean": "rimraf packages/**/dist packages/**/*.js packages/**/*.d.ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/javadghasemi/node-clever-cache.git"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.[jt]sx?": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "transform": {
      "\\.[jt]sx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "(.+)\\.js": "$1",
      "#ansi-styles": "ansi-styles",
      "#supports-color": "supports-color"
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "devDependencies": {
    "@jest/globals": "^29.3.1",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.12",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.46.0",
    "@typescript-eslint/parser": "^5.46.0",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unicorn": "^45.0.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lerna": "^6.1.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0"
  }
}
